<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head.ejs')%>
 <script src="/createProductValidations.js"></script>
 <script src="/homeFront.js"></script>
 <title>Crear NFT</title>
<body>
  <main class="fondo">
  <%-include ('./partials/nav.ejs') %> 
  <div id="mySidebar" class="sidebar" style="z-index:100;">
    <a href="javascript:void(0)" class="closebtn" id="close">×</a>
    <a href="/productos/createProduct">Crea tu Nft</a>
    <a href="#">Cart</a>
    <a href="/profile">Mi cuenta</a>
    <a href="#">Contáctanos</a>
  </div>
 
  <div class="productForm">
    <div class="logo">
      <a href="/">
        <img src="/imagenes/Nftlogo.png" alt="Nft" />
      </a>
      <i class="fas fa-paint-brush"></i>
    </div>
    <form class="form_create" action="/productos/createProduct" method="post" enctype="multipart/form-data">
      <div class="imagenForm">
        <label for="imagenPrincipal">Seleccionar Imagen</label>
        <input type="file" name="imagen" id="imagenPrincipal" accept="image/*" />
      </div>
      <div class="error-imagen"></div>
      <div class="tituloForm">
        <label for="titulo">Titulo del NFT:</label>
        <input type="text" name="titulo" id="nft_titulo" />
      </div>
      <div class="error-titulo"></div>
      <% if (locals.errores && errores.name) { %>
        <p class="error"><%= errores.name.msg %> </p>
       <% } %>
      <div class="descripcionForm">
        <label for="descripcion">Nivel de rareza:</label>
        <input name="oddity" id="nft_oddity" type="number"></input>
      </div>
      <div class="error-oddity"></div>
      <% if (locals.errores && errores.oddity) { %>
       <p class="error"><%= errores.oddity.msg %> </p>
      <% } %>
      <div class="precioForm">
        <label for="precio">Precio:</label>
        <input type="number" name="price" id="nft_price" step="0.01" />
      </div>
      <div class="error-price"></div>
      <% if (locals.errores && errores.price) { %>
        <p class="error"><%= errores.price.msg %> </p>
       <% } %>
      <div>
        <label for="coleccion">Coleccion:</label>
        <select name="coleccion" id="nft_coleccion">
          <option value="null">Selecciona una colección:</option>
         
           <% for( let i = 0; i < coleccion.length; i++ ) { %>
          <option value="<%= coleccion[i].id_coleccion  %>"><%= coleccion[i].name %> </option>
          <% } %>
        
        </select>
      </div>
      <div class="error-coleccion"></div>
      <div class="submitForm">
        <button type="submit">Publicar Nft</button>
      </div>
    </form>
  </div>
  
  <br>
</main>
   <!--Footer-->
 <%-include('./partials/footer.ejs')%>
    
</body>

</html>